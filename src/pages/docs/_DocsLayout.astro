---
/**
 * DocsLayout - Shared layout for documentation pages
 * Minimal, readable, SEO-optimized
 */
import Layout from '../_layout.astro';

const { 
  title,
  description,
  ogTitle = title,
} = Astro.props;

const fullTitle = `${title} | cURL Converter Docs`;
---

<Layout title={fullTitle} description={description} ogTitle={ogTitle}>
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumb -->
    <nav class="text-sm text-gray-600 mb-6">
      <a href="/" class="hover:text-blue-600">Home</a>
      <span class="mx-2">→</span>
      <a href="/docs/" class="hover:text-blue-600">Docs</a>
      <span class="mx-2">→</span>
      <span class="text-gray-900">{title}</span>
    </nav>

    <!-- Content -->
    <article class="prose prose-blue max-w-none">
      <slot />
    </article>

    <!-- CTA Footer -->
    <div class="mt-16 p-6 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg border border-blue-100">
      <h3 class="text-lg font-semibold text-gray-900 mb-2">Try it live with RequestBin</h3>
      <p class="text-sm text-gray-700 mb-4">
        Test your converted code with real HTTP endpoints. RequestBin gives you unique URLs to inspect requests, debug webhooks, and validate API calls.
      </p>
      <div class="flex flex-wrap gap-3">
        <a 
          href="https://requestbin.net/apps/curl-converter" 
          target="_blank" 
          rel="noopener"
          class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium text-sm"
        >
          Open in RequestBin →
        </a>
        <a 
          href="/" 
          class="inline-flex items-center gap-2 px-4 py-2 bg-white text-gray-700 rounded-lg hover:bg-gray-50 transition-colors font-medium text-sm border border-gray-300"
        >
          ← Back to Converter
        </a>
      </div>
    </div>

    <!-- Related Docs -->
    <div class="mt-8 pt-8 border-t border-gray-200">
      <p class="text-sm text-gray-600">
        <a href="/docs/" class="text-blue-600 hover:underline">View all documentation</a>
      </p>
    </div>
  </div>
</Layout>

<style>
  /* Prose styling for docs content */
  .prose {
    @apply text-gray-800 leading-relaxed;
  }
  .prose h1 {
    @apply text-3xl md:text-4xl font-bold text-gray-900 mb-4 mt-0;
  }
  .prose h2 {
    @apply text-2xl font-semibold text-gray-900 mt-8 mb-4;
  }
  .prose h3 {
    @apply text-xl font-semibold text-gray-900 mt-6 mb-3;
  }
  .prose p {
    @apply mb-4;
  }
  .prose ul, .prose ol {
    @apply mb-4 pl-6;
  }
  .prose li {
    @apply mb-2;
  }
  .prose code {
    @apply bg-gray-100 text-gray-800 px-1.5 py-0.5 rounded text-sm font-mono;
  }
  .prose pre {
    @apply bg-gray-900 text-gray-100 p-4 rounded-lg overflow-x-auto mb-4;
  }
  .prose pre code {
    @apply bg-transparent text-gray-100 p-0;
  }
  .prose a {
    @apply text-blue-600 hover:text-blue-700 hover:underline;
  }
  .prose strong {
    @apply font-semibold text-gray-900;
  }
</style>
