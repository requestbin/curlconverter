---
import Layout from '../pages/_layout.astro';
import '../styles/markdown.css';

const { frontmatter } = Astro.props;
const { title, description } = frontmatter;
const fullTitle = `${title} | cURL Converter Docs`;
---

<Layout title={fullTitle} description={description} ogTitle={title}>
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumb -->
    <nav class="text-sm text-gray-600 mb-6">
      <a href="/" class="hover:text-blue-600">Home</a>
      <span class="mx-2">→</span>
      <a href="/docs/" class="hover:text-blue-600">Docs</a>
      <span class="mx-2">→</span>
      <span class="text-gray-900">{title}</span>
    </nav>

    <!-- Markdown Content -->
    <article class="markdown-content">
      <slot />
    </article>

    <!-- CTA Footer -->
    <div class="mt-16 p-6 bg-gradient-to-r from-blue-50 to-indigo-50 rounded-lg border border-blue-100">
      <h3 class="text-lg font-semibold text-gray-900 mb-2">Try it live with RequestBin</h3>
      <p class="text-sm text-gray-700 mb-4">
        Test your converted code with real HTTP endpoints. RequestBin gives you unique URLs to inspect requests, debug webhooks, and validate API calls.
      </p>
      <div class="flex flex-wrap gap-3">
        <a 
          href="https://requestbin.net/apps/curl-converter" 
          target="_blank" 
          rel="noopener"
          class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium text-sm no-underline"
        >
          Open in RequestBin →
        </a>
        <a 
          href="/" 
          class="inline-flex items-center gap-2 px-4 py-2 bg-white text-gray-700 rounded-lg hover:bg-gray-50 transition-colors font-medium text-sm border border-gray-300 no-underline"
        >
          ← Back to Converter
        </a>
      </div>
    </div>

    <!-- Related Docs -->
    <div class="mt-8 pt-8 border-t border-gray-200">
      <p class="text-sm text-gray-600">
        <a href="/docs/" class="text-blue-600 hover:underline">View all documentation</a>
      </p>
    </div>
  </div>
</Layout>
